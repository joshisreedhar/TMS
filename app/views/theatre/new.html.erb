<h1>New Theatre</h1>

<%= form_tag :controller => 'theatre', :action => 'create' do %>
<div style="margin-top:20px">
<table>
	<tr>
		<td>
			<%= label_tag 'Theatre name' %>
		</td>
		<td class="datafield">
			<%= text_field_tag 'theatre_name',nil,:class=>"datavalue" %>
		</td>
	</tr>
	<tr>
		<td>
			<%= label_tag 'Image Url' %>			
		</td>
		<td class="datafield">
			<%= text_field_tag 'image_url',nil,:class=>"datavalue" %>
		</td>
	</tr>	
	<tr>
		<td>
			<%= label_tag 'Show times' %>
		</td>
		<td class="datafield">
			<% @showtimes.each do |showtime| %>
				<%= label_tag showtime.time %>
				<%= check_box_tag "show_#{showtime.id}", showtime.id %>
			<% end %>
		</td>
	</tr>
	<tr>
		<td>
			<%= label_tag 'Address' %>
		</td>
		<td class="datafield">
			<%= text_area_tag 'address' %>
		</td>
	</tr>
</table>
</div>
<%= submit_tag "Save", :disable_with => "Please wait..." %>
 <% end %>

<h1>Select Show</h1>

<div class="details" >
	<% @theatres.each do |theatreid| %>
		<% id = theatreid.theatre_id %>
		<div>
			<% theatre = Theatre.find(id)%>
			<%= theatre.name %>
			<% theatreshows = Show.where(:theatre_id => id,:movie_id => @movie_id ) %>
				<div class="site-nav">
					<ul>
						<% theatreshows.each do |theatreshow| %>
							<li>
								<%= link_to Showtime.where(:id=>theatreshow.showtime_id).first.time, :controller=>'ticketselection', :action =>'index', :id=>theatreshow.id, :showdate=>@showdate %>
							</li>
						<% end %>
					</ul>
				</div>
		</div>
	<% end %>
</div>
